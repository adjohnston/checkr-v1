<header>
  <h1>Sign up</h1>
</header>

<hr />

<p>To sign up, please fill in the form below. Your 'username' is used to view your public lists.</p>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <% if resource.errors.count > 0 %>
    <div id="errors">
      <p>Oops! There was <%= pluralize(resource.errors.count, 'error') %> stopping sign-up</p>

      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>New User</legend>

    <ol>
      <li>
        <%= f.label :name, 'Full Name' %>
        <%= f.text_field :name, placeholder: 'Full Name' %>
      </li>

      <li>
        <%= f.label :username %>
        <%= f.text_field :username, placeholder: 'Username' %>
      </li>

      <li>
        <%= f.label :email, 'Email Address' %>
        <%= f.email_field :email, placeholder: 'Email Address' %>
      </li>

      <li>
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Password' %>
      </li>

      <li>
        <%= f.label :password_confirmation, 'Retype Password' %>
        <%= f.password_field :password_confirmation, placeholder: 'Retype Password' %>
      </li>

      <li><%= f.submit "Sign up", class: %w[btn btn-cta btn-lrg] %></li>
    </ol>
  </fieldset>
<% end %>

<hr />

<%= render "devise/shared/links" %>
