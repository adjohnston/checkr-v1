<header>
  <h1>Forgotten Password</h1>
</header>

<p>If you're having trouble remembering your password, type your email address in below and we'll reset it for you.</p>

<p>Once you are logged in, you can change it again to something better.</p>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <% if resource.errors.count > 0 %>
    <div id="errors">
      <p><span class="icon icon-warn"></span>Oops! There was <%= pluralize(resource.errors.count, 'error') %></p>

      <ul>
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Forgotten Password</legend>

    <ol>
      <li>
        <%= f.label :email, 'Email Address' %>
        <%= f.email_field :email, placeholder: 'Email Address' %>
      </li>

      <li><%= f.submit 'Reset Password', class: %w[btn btn-lrg btn-cta] %></li>
    </ol>
  </fieldset>
<% end %>

<hr />

<%= render "devise/shared/links" %>
